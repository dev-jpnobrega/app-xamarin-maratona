<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MonkeyHubApp.Views.LoginPage"
             Title="{Binding Title}">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Sign Up" Command="{Binding SignUpCommand}"></ToolbarItem>
    </ContentPage.ToolbarItems>
    <StackLayout Padding="10,10,10,10"  VerticalOptions="StartAndExpand">


        <StackLayout VerticalOptions="CenterAndExpand">
            <Label Text="Entre com login e senha" Style="{StaticResource SubTitle}"></Label>
            <Entry Placeholder="E-mail" ></Entry>
            <Entry Placeholder="Senha"></Entry>

            <Button Style="{StaticResource BTDefault}" 
                Command="{Binding LoginCommand}" 
                Text="Entrar"
                BackgroundColor="#b21404" TextColor="White">
            </Button>
        </StackLayout>
        <StackLayout VerticalOptions="EndAndExpand">
            <Label Text="Login com facebook" Style="{StaticResource SubTitle}"></Label>
            <Button Style="{StaticResource BTDefault}" 
                Command="{Binding LoginCommand}" 
                Text="Login com Facebook"
                BackgroundColor="#2b7bbe" TextColor="White">
            </Button>
        </StackLayout>
    </StackLayout>

</ContentPage>